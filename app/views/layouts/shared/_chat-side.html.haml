.chat-side
  .side-headder
    .side-headder__box
      %p.side-headder__box__name
        = current_user.name 
      %ul.side-headder__box__user-menu
        %li.side-headder__box__user-menu__icon
          =link_to new_group_path do
            %i.fa.fa-edit
        %li.side-headder__box__user-menu__icon
          =link_to edit_user_path(current_user) do
            %i.fa.fa-cog
  .groups
    .group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
